<h1 class="text-2xl font-bold mb-6">Registrar <%= @movimiento.tipo.capitalize %> de Stock</h1>

<div class="mb-4">
  <p><strong>Producto:</strong> <%= @producto.nombre %></p>
  <p><strong>Stock actual:</strong> <%= @producto.stock %></p>
</div>

<%= form_with(model: @movimiento, url: movimientos_path(producto_id: @producto.id), local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :cantidad, class: "block font-bold mb-1" %>
    <%= form.number_field :cantidad, min: 1, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :nota, class: "block font-bold mb-1" %>
    <%= form.text_field :nota, class: "w-full border rounded px-3 py-2" %>
  </div>

  <%= form.hidden_field :tipo %>

  <div class="flex space-x-2">
    <%= form.submit "Registrar Movimiento", class: "btn btn-green" %>
    <%= link_to "Cancelar", productos_path, class: "btn btn-blue" %>
  </div>
<% end %>
