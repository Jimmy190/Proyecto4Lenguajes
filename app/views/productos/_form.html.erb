<%= form_with(model: producto, local: true) do |form| %>
  <% if producto.errors.any? %>
    <div class="alert">
      <h2><%= pluralize(producto.errors.count, "error") %> impidieron guardar el producto:</h2>
      <ul>
        <% producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :nombre, class: "block font-bold mb-1" %>
    <%= form.text_field :nombre, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :precio, class: "block font-bold mb-1" %>
    <%= form.number_field :precio, step: 0.01, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="flex items-center gap-4 mt-6">
    <%= form.submit(producto.new_record? ? "Crear Producto" : "Actualizar Producto", class: "btn btn-green") %>
    <button type="button" onclick="window.location='<%= productos_path %>'" class="btn btn-blue">
      Cancelar
    </button>
  </div>
<% end %>
