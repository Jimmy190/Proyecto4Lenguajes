<h1 class="text-2xl font-bold mb-6">Historial de Movimientos</h1>

<table class="min-w-full table-auto bg-white shadow rounded">
  <thead>
    <tr class="bg-blue-900 text-white">
      <th class="px-4 py-2">Producto</th>
      <th class="px-4 py-2">Tipo</th>
      <th class="px-4 py-2">Cantidad</th>
      <th class="px-4 py-2">Nota</th>
      <th class="px-4 py-2">Fecha</th>
    </tr>
  </thead>
  <tbody>
    <% @movimientos.each do |mov| %>
      <tr class="border-b hover:bg-gray-50">
        <!-- Usamos producto_nombre en lugar de producto.nombre -->
        <td class="px-4 py-2"><%= mov.producto_nombre %></td>
        <td class="px-4 py-2">
          <% if mov.tipo == 'entrada' %>
            <span class="text-green-600 font-semibold">Entrada</span>
          <% else %>
            <span class="text-red-600 font-semibold">Salida</span>
          <% end %>
        </td>
        <td class="px-4 py-2"><%= mov.cantidad %></td>
        <td class="px-4 py-2"><%= mov.nota.presence || 'â€”' %></td>
        <td class="px-4 py-2"><%= l mov.created_at, format: :short %></td>
      </tr>
    <% end %>
  </tbody>
</table>
