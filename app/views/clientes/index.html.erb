<%# app/views/clientes/index.html.erb %>

<h1 class="text-2xl font-bold mb-6">Listado de Clientes</h1>

<!-- Botón para agregar cliente -->
<div class="mb-4">
  <%= link_to "➕ Agregar Cliente", new_cliente_path, class: "btn btn-green" %>
</div>

<!-- Tabla de clientes -->
<table class="min-w-full table-auto border bg-white shadow rounded">
  <thead>
    <tr class="bg-blue-900 text-white">
      <th class="px-4 py-2">Nombre</th>
      <th class="px-4 py-2">Correo</th>
      <th class="px-4 py-2">Direccion</th>
      <th class="px-4 py-2">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr class="hover:bg-gray-50">
        <td class="border px-4 py-2"><%= cliente.nombre %></td>
        <td class="border px-4 py-2"><%= cliente.correo %></td>
        <td class="border px-4 py-2"><%= cliente.direccion %></td>
        <td class="border px-4 py-2">
          <div class="flex flex-wrap gap-2">
            <%= link_to "Ver", cliente_path(cliente), class: "btn btn-blue" %>
            <%= link_to "Editar", edit_cliente_path(cliente), class: "btn btn-green" %>
            <%= link_to "Eliminar", cliente_path(cliente),
                method: :delete,
                data: { confirm: "¿Eliminar cliente?" },
                class: "btn btn-red" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
