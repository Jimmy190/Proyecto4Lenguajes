<h1 class="text-2xl font-bold mb-6">Listado de Productos</h1>

<table class="min-w-full table-auto border">
  <thead>
    <tr class="bg-gray-100 text-left">
      <th class="px-4 py-2">Nombre</th>
      <th class="px-4 py-2">Precio</th>
      <th class="px-4 py-2">Stock</th>
      <th class="px-4 py-2">Estado</th>
      <th class="px-4 py-2">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr class="<%= producto.stock_bajo? ? 'bg-red-100' : 'bg-green-100' %>">
        <td class="border px-4 py-2"><%= producto.nombre %></td>
        <td class="border px-4 py-2"><%= number_to_currency producto.precio %></td>
        <td class="border px-4 py-2"><%= producto.stock %></td>
        <td class="border px-4 py-2">
          <% if producto.stock_bajo? %>
            <span class="text-red-600 font-semibold">Stock Bajo</span>
          <% else %>
            <span class="text-green-600 font-semibold">Suficiente</span>
          <% end %>
        </td>
        <td class="border px-4 py-2">
          <%= link_to 'Ver', producto_path(producto), class: "text-blue-600 hover:underline" %> |
          <%= link_to 'Editar', edit_producto_path(producto), class: "text-green-600 hover:underline" %> |
          <%= link_to 'Eliminar', producto_path(producto), method: :delete, data: { confirm: 'Â¿Eliminar producto?' }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>