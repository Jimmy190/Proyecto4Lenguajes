<h1 class="text-2xl font-bold mb-6">Historial de Movimientos</h1>
<ul class="space-y-2">
  <% @movimientos.each do |m| %>
    <li class="border rounded p-4 <%= m.tipo == 'entrada' ? 'bg-green-50' : 'bg-red-50' %>">
      <strong><%= m.tipo.capitalize %></strong> -
      <%= m.producto.nombre %>,
      Cantidad: <%= m.cantidad %>,
      Nota: <%= m.nota.presence || 'Sin nota' %>,
      <em><%= l m.created_at, format: :short %></em>
    </li>
  <% end %>
</ul>
